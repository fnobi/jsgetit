#!/usr/bin/env node

var commander = require('commander'),
    JSGetIt   = require(__dirname + '/../');

// コマンドライン引数読み込み
commander
	// .version('0.0.1')
	.option('-o, --output [path]', 'output path')
	.option('-a, --app', 'as .app file (with macgap)')
	.parse(process.argv);


var codename = commander.args.shift();

// 引数無しならエラー終了
if (!codename) {
	console.error('enter username and codename.');
	process.exit();
}

var jsGetIt = new JSGetIt(codename);
jsGetIt.download();